<LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" xmlns:android="http://schemas.android.com/apk/res/android">
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <LinearLayout  android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="지도"
            android:id="@+id/textView"/>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/imageView" android:src="@drawable/map_google" android:cropToPadding="false"
            android:scaleType="fitStart" android:adjustViewBounds="true" android:clickable="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="San Diego Hanbit Church\n4717 Cardin St.\nSan Diego, CA 92111"
            android:id="@+id/textView2" android:clickable="true"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>